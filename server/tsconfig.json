{
  "extends": "@tsconfig/node22/tsconfig.json",

  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",

    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",

    "strict": true,
    "verbatimModuleSyntax": true,
    "sourceMap": true,

    "types": ["vitest/globals"],

    "paths": {
      "@server/*": ["./src/*"],
      "@tests/*": ["./tests/*"]
    }
  }
}
